<table cellpadding="5" border="1">
	<tr>
		<th>Name</th>
		<th>Rating</th>
		<th>abv</th>
		<th>OG</th>
		<th>FG</th>
		<th>Date Brewed</th>
		<th>Date Bottled</th>
