<!DOCTYPE html>
<html>
<head>
  <title>Fermently</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<table width=100% cellspacing=0>
		<tr>
			<td>
				<h1>Fermently</h1>
				<%= link_to "Home", root_path %> | 
				<% if user_signed_in? %>
					<%= link_to "My Beers", "/#{current_user.username}" %> | 
				<% end %>
				<%= link_to "Beer Search", beers_path %> | 
				<%= link_to "Beer Styles", beer_styles_path %> | 
				<%= link_to "About us", "/about.html" %>
			</td>
			<td>
				<div align="right">
					<br />
					<br />
					
					<% if user_signed_in? %>	
							<%= current_user.username %><br />
						<%= link_to "My Profile", "/#{current_user.username}" %><br />
						<%= link_to "Log out", destroy_user_session_path, method: :delete %>
					<% else %>
						<%= link_to "Login", new_user_session_path %><br />	
						<%= link_to "Sign up", new_user_registration_path %>
					<% end %>

				</div>
			</td>
		</tr>
	</table>
	<hr />
</header>

<p style="color:red;"><%= flash[:error] %></p>
<p style="color:green;"><%= notice %></p>
<p class="color:red;"><%= alert %></p>

<%= yield %>

</body>
</html>
