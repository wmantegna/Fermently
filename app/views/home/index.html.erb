	<tr>
		<td>
			<center>

			<h2>Welcome to Fermently!</h2>
			<div style="background-color:lightgray; width: 250px; text-align: center">
			

					Did you brew a beer today?<br />
					<%= link_to "Add a Homebrew", new_beer_path %>


			</div>
			
			<h4><%= link_to "Search for a Beer", beers_path %></h4>

			</center>
		</td>
