<h2><%= @user.username %>'s Followings!</h2>

<b><%= @user.username %> is following (<%= @user.followings.count %>):</b><br />
<% @user.followings.each do |f| %>
	<%= link_to f.user.username, user_path(f.user) %>
 	<% if current_user == @user %>
 		 <%= link_to "Stop following", delete_user_following_path(@user, f) %>
 	<% end %>
	<br />
<% end %>
<br />

<b><%= @user.username %>'s followers (<%= @user.followers.count %>):</b><br />
<% @user.followers.each do |f| %>
	<%= link_to f.follower.username, user_path(f.follower) %><br />
<% end %>